---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <p class="my-2 text-md">
    {frontmatter.pubDate.slice(0, 10)} - Written by: {frontmatter.author}
  </p>
  <div class="bg-indigo-300 shadow-lg rounded-md">
    <img
      src={frontmatter.image.url}
      class="object-cover w-full rounded-md"
      alt={frontmatter.image.alt}
    />
  </div>
  <p class="mt-2"><em>{frontmatter.description}</em></p>
  <div class="flex flex-wrap mb-8 mt-4">
    {
      frontmatter.tags.map((tag) => (
        <p class="m-2 border-dashed border-2 border-indigo-700 rounded-lg text-lg p-2 bg-slate-300 dark:bg-slate-200 ">
          <a class="text-indigo-700" href={`/tags/${tag}`}>
            {tag}
          </a>
        </p>
      ))
    }
  </div>

  <article class="prose lg:prose-xl dark:prose-invert">
    <slot />
  </article>
</BaseLayout>
